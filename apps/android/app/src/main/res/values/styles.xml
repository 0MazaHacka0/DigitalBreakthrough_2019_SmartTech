<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- AppBar theme -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Main screen -->
    <!-- Layout -->
    <style name="main_layout">
        <item name="android:layout_marginLeft">@dimen/main_layout_margin_left</item>
        <item name="android:layout_marginRight">@dimen/main_layout_margin_right</item>
    </style>
    <!-- Company logo -->
    <style name="main_companyLogo">
        <item name="android:layout_marginTop">@dimen/main_company_logo_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/main_company_logo_margin_bottom</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_company_logo_size</item>
        <item name="android:contentDescription">@string/main_company_logo_description</item>
    </style>
    <!-- Text field -->
    <style name="main_textfield">
        <item name="android:layout_marginTop">@dimen/main_text_field_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/main_text_field_margin_bottom</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Event screen -->
    <!-- Layout -->
    <style name="event_layout">
        <item name="android:layout_marginTop">@dimen/event_layout_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/event_layout_margin_vertical</item>
        <item name="android:layout_marginLeft">@dimen/event_layout_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/event_layout_margin_horizontal</item>
    </style>
    <!-- Inner linear layout -->
    <style name="event_inner_layout">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">@drawable/bottom_tint</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Text view -->
    <style name="event_text_view">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/event_text_view_text_size</item>
    </style>
    <!-- Image view -->
    <style name="event_image_view">
        <item name="android:layout_gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
